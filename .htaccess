# -FrontPage-

IndexIgnore .htaccess */.??* *~ *# */HEADER* */README* */_vti*

<Limit GET POST>
order deny,allow
deny from all
allow from all
</Limit>
<Limit PUT DELETE>
order deny,allow
deny from all
</Limit>

Options -MultiViews

RewriteEngine on
#RewriteBase /

#force https
#RewriteCond %{HTTPS} !^on$
#RewriteRule (.*) https://foobar/$1 [R,L]

#move all requests to the app folder
RewriteRule ^api/(.*)$ index.php?$1 [L]

#move all others to route.php so we can redirect
#RewriteCond %{SCRIPT_FILENAME} !-f
#RewriteCond %{SCRIPT_FILENAME} !-d
#RewriteRule ^(.*)$ index.php?$1 [L]

#url not found
#this isn't necessary for now
#ErrorDocument 404 /404
