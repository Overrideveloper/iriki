# -FrontPage-

IndexIgnore .htaccess */.??* *~ *# */HEADER* */README* */_vti*

<Limit GET POST>
order deny,allow
deny from all
allow from all
</Limit>
<Limit PUT DELETE>
order deny,allow
deny from all
</Limit>

Options -MultiViews

RewriteEngine on
RewriteBase /

#force https
RewriteCond %{HTTPS} !^on$
RewriteRule (.*) https://foobar/$1 [R,L]

#api
#api/[model]/[action]/[par1]/[par2]/[par3]

#move all others to route.php so we can redirect
RewriteCond %{SCRIPT_FILENAME} !-f
RewriteCond %{SCRIPT_FILENAME} !-d
RewriteRule ^(.*)$ api.php/$1 [L]

#RewriteRule ^api/pulse/create/([^/.]+)/([^/.]+)/([^/.]+)/?$ api.php?do=pulse&hash=$1&status=$2&log=$3 [L]
#RewriteRule ^api/pulse/create/([^/.]+)/([^/.]+)/?$ api.php?do=pulse&hash=$1&status=$2 [L]

#url not found
#ErrorDocument 404 /404
